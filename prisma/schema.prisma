generator client {
  provider = "prisma-client"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  memberId String? @unique
  password String
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())
  sessions Session[]
}

model Session {
  id String @id @default(uuid())
  userId String
  expiresAt DateTime
  user User @relation(fields: [userId], references: [id])
}

model Invitation {
  id String @id @default(uuid())
  email String @unique
  memberId String @unique
  token String @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  used Boolean @default(false)
}